            <div class="app-window" id="app-messages"><div class="app-header">Messages</div><div class="app-content" style="display: flex; align-items: center; justify-content: center;"><div style="font-size: 64px;">üí¨</div></div></div>

            <!-- Customization Modal -->
            <div class="modal" id="customizeModal" onclick="if(event.target===this)closeModal()">
                <div class="modal-content">
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                        <b>Edit Icon</b>
                        <span onclick="closeModal()" style="cursor: pointer; font-size: 20px;">√ó</span>
                    </div>
                    <div style="font-size: 12px; opacity: 0.6; margin-bottom: 10px;">Color</div>
                    <div class="color-grid" id="colorGrid"></div>
                    <div style="font-size: 12px; opacity: 0.6; margin-bottom: 10px;">Icon</div>
                    <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 10px;" id="iconGrid"></div>
                </div>
