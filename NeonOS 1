    <script>
        // State
        let isLocked = true;
        let currentApp = null;
        let editMode = false;
        let customApp = null;
        let password = '';
        const correctPassword = '2580';
        let calcValue = '0';
        let calcOp = null;
        let calcFirst = null;
        let touchStartY = 0;
        let touchStartTime = 0;

        // Colors and icons
        const colors = [
            'linear-gradient(135deg, #8e8e93, #636366)',
            'linear-gradient(135deg, #ff375f, #ff2d55)',
            'linear-gradient(135deg, #5856d6, #af52de)',
            'linear-gradient(135deg, #ff9500, #ff6b00)',
            'linear-gradient(135deg, #007aff, #5856d6)',
            'linear-gradient(135deg, #34c759, #30d158)',
            'linear-gradient(135deg, #000, #434343)',
            'linear-gradient(135deg, #ff2d55, #ff375f)',
            'linear-gradient(135deg, #5ac8fa, #007aff)',
            'linear-gradient(135deg, #af52de, #5856d6)'
        ];
        const icons = ['‚öôÔ∏è','üì∑','üñºÔ∏è','üßÆ','üåê','üïê','‚úâÔ∏è','üéµ','üìû','üí¨','üè†','‚ù§Ô∏è','üî•','‚ö°','üéÆ','üíº'];

        // Init
        document.addEventListener('DOMContentLoaded', () => {
            updateTime();
            setInterval(updateTime, 1000);
            initPasswordPad();
            initPhotos();
            initModal();
            setupSwipe();
        });

        function updateTime() {
            const now = new Date();
            const h = String(now.getHours()).padStart(2,'0');
            const m = String(now.getMinutes()).padStart(2,'0');
            const time = h + ':' + m;
            
            document.getElementById('lockTime').textContent = time;
            document.getElementById('status-time').textContent = time;
            document.getElementById('homeTime').textContent = time;
            document.getElementById('appClockTime').textContent = time;
            
            const date = now.toLocaleDateString('en-US', {weekday: 'long', month: 'long', day: 'numeric'});
            document.getElementById('lockDate').textContent = date;
            document.getElementById('homeDate').textContent = date;
            document.getElementById('appClockDate').textContent = date;
        }

        function initPasswordPad() {
            const pad = document.getElementById('passwordPad');
            const keys = ['1','2','3','4','5','6','7','8','9','','0','‚å´'];
            keys.forEach((key, i) => {
                if (key === '') {
                    pad.innerHTML += '<div></div>';
                } else {
                    const div = document.createElement('div');
                    div.className = 'password-key';
                    div.textContent = key;
                    if (key === '‚å´') {
                        div.onclick = () => deletePassword();
                    } else {
                        div.onclick = () => enterPassword(key);
                    }
                    pad.appendChild(div);
                }
            });
        }

        function initPhotos() {
            const grid = document.getElementById('photoGrid');
            for(let i = 0; i < 18; i++) {
                const colors = ['#667eea', '#f093fb', '#4facfe', '#43e97b', '#fa709a', '#ffecd2'];
                grid.innerHTML += `<div style="aspect-ratio: 1; background: ${colors[i % colors.length]};" onclick="showToast('Photo ${i+1}')"></div>`;
            }
        }

        function initModal() {
            const colorGrid = document.getElementById('colorGrid');
            colors.forEach((c, i) => {
                colorGrid.innerHTML += `<div class="color-opt ${i===0?'selected':''}" style="background: ${c}" onclick="selectColor(this, '${c}')"></div>`;
            });
            
            const iconGrid = document.getElementById('iconGrid');
            icons.forEach((icon, i) => {
                iconGrid.innerHTML += `<div style="aspect-ratio: 1; background: rgba(255,255,255,0.1); border-radius: 10px; display: flex; align-items: center; justify-content: center; font-size: 24px; cursor: pointer; border: 2px solid transparent;" onclick="selectIcon('${icon}', this)">${icon}</div>`;
            });
        }

        // Security
        function scanFingerprint() {
            const btn = document.getElementById('fingerprintBtn');
            btn.classList.add('scanning');
            setTimeout(() => {
                btn.classList.remove('scanning');
                btn.classList.add('success');
                setTimeout(() => {
                    unlock();
                }, 300);
            }, 1500);
        }

        function showPassword() {
            document.getElementById('passwordScreen').classList.add('show');
            password = '';
            updatePasswordDots();
        }

        function hidePassword() {
            document.getElementById('passwordScreen').classList.remove('show');
            password = '';
        }

        function enterPassword(digit) {
            if (password.length < 4) {
                password += digit;
                updatePasswordDots();
                if (password.length === 4) {
                    setTimeout(() => {
                        if (password === correctPassword) {
                            hidePassword();
                            unlock();
                        } else {
                            showToast('Wrong passcode');
                            password = '';
                            updatePasswordDots();
                        }
                    }, 200);
                }
            }
        }

        function deletePassword() {
            password = password.slice(0, -1);
            updatePasswordDots();
        }

        function updatePasswordDots() {
            const dots = document.querySelectorAll('.password-dot');
            dots.forEach((dot, i) => {
                dot.classList.toggle('filled', i < password.length);
            });
        }

        function unlock() {
            isLocked = false;
            document.getElementById('lockScreen').classList.add('unlocked');
            setTimeout(() => {
                document.getElementById('homeScreen').classList.add('active');
            }, 300);
        }

        function toggleLock() {
            if (!isLocked) {
                isLocked = true;
                document.getElementById('homeScreen').classList.remove('active');
                document.getElementById('lockScreen').classList.remove('unlocked');
                closeAllApps();
                document.getElementById('fingerprintBtn').classList.remove('success');
            }
        }

        // Swipe Navigation
        function setupSwipe() {
            const navBar = document.getElementById('navBar');
            const swipeArea = document.getElementById('swipeArea');
            
            const handleStart = (y) => {
                touchStartY = y;
                touchStartTime = Date.now();
            };
            
            const handleMove = (y) => {
                if (!currentApp) return;
                const diff = touchStartY - y;
                if (diff > 0) {
                    // Visual feedback could go here
                }
            };
            
            const handleEnd = (y) => {
                const diff = touchStartY - y;
                const duration = Date.now() - touchStartTime;
                
                // Swipe up more than 50px or fast swipe
                if (diff > 50 || (diff > 30 && duration < 200)) {
                    if (currentApp) {
                        goHome();
                    } else if (!isLocked && !document.getElementById('controlCenter').classList.contains('open')) {
                        // Open control center from home
                        if (diff > 100) {
                            toggleControlCenter();
                        }
                    }
                }
            };
            
            // Nav bar swipe
            navBar.addEventListener('touchstart', (e) => handleStart(e.touches[0].clientY));
            navBar.addEventListener('touchmove', (e) => handleMove(e.touches[0].clientY));
            navBar.addEventListener('touchend', (e) => handleEnd(e.changedTouches[0].clientY));
            
            // Full screen swipe area
            swipeArea.addEventListener('touchstart', (e) => handleStart(e.touches[0].clientY));
            swipeArea.addEventListener('touchmove', (e) => handleMove(e.touches[0].clientY));
            swipeArea.addEventListener('touchend', (e) => handleEnd(e.changedTouches[0].clientY));
            
            // Mouse support for desktop testing
            navBar.addEventListener('mousedown', (e) => handleStart(e.clientY));
            navBar.addEventListener('mouseup', (e) => handleEnd(e.clientY));
        }

        // App Management
        function openApp(app) {
            if (editMode && event.target.classList.contains('edit-badge')) return;
            if (isLocked) return;
            
            currentApp = app;
            document.getElementById('app-' + app).classList.add('open');
            document.getElementById('screen').classList.add('app-open');
            document.getElementById('dock').style.opacity = '0';
        }

        function goHome() {
            if (!currentApp) {
                document.getElementById('controlCenter').classList.remove('open');
                return;
            }
            
            document.getElementById('app-' + currentApp).classList.remove('open');
            document.getElementById('screen').classList.remove('app-open');
            document.getElementById('dock').style.opacity = '1';
            currentApp = null;
        }

        function closeAllApps() {
            document.querySelectorAll('.app-window').forEach(app => app.classList.remove('open'));
            document.getElementById('screen').classList.remove('app-open');
            document.getElementById('dock').style.opacity = '1';
            document.getElementById('controlCenter').classList.remove('open');
            currentApp = null;
        }

        // Control Center
        function toggleControlCenter() {
            if (isLocked) return;
            document.getElementById('controlCenter').classList.toggle('open');
        }

        function toggleCC(el, type) {
            el.classList.toggle('active');
            showToast(type + ' ' + (el.classList.contains('active') ? 'On' : 'Off'));
        }

        function toggleCCToggle(el) {
            el.classList.toggle('active');
        }

        // Settings
        function toggleSetting(el) {
            const toggle = el.querySelector('.toggle-switch');
            toggle.classList.toggle('on');
            const label = el.querySelector('span').textContent;
            showToast(label + ' ' + (toggle.classList.contains('on') ? 'On' : 'Off'));
        }

        function toggleEditMode() {
            editMode = !editMode;
            document.body.classList.toggle('edit-mode');
            showToast(editMode ? 'Edit mode on - Tap ‚úé to customize' : 'Edit mode off');
            goHome();
        }

        // Customization
        function customize(app) {
            customApp = app;
            document.getElementById('customizeModal').classList.add('show');
        }

        function closeModal() {
            document.getElementById('customizeModal').classList.remove('show');
            customApp = null;
        }

        function selectColor(el, color) {
            document.querySelectorAll('.color-opt').forEach(c => c.classList.remove('selected'));
            el.classList.add('selected');
            if (customApp) {
                document.querySelector(`[data-app="${customApp}"]`).style.background = color;
            }
        }

        function selectIcon(icon, el) {
            if (customApp) {
                const box = document.querySelector(`[data-app="${customApp}"]`);
                const badge = box.querySelector('.edit-badge');
                box.innerHTML = icon;
                if (badge) box.appendChild(badge);
                closeModal();
                showToast('Icon updated');
            }
        }

        // Calculator
        function calc(key) {
            if (key === 'C') {
                calcValue = '0';
                calcOp = null;
                calcFirst = null;
            } else if (key === '=') {
                if (calcOp && calcFirst !== null) {
                    const second = parseFloat(calcValue);
                    const first = parseFloat(calcFirst);
                    switch(calcOp) {
                        case '+': calcValue = String(first + second); break;
                        case '-': calcValue = String(first - second); break;
                        case '√ó': calcValue = String(first * second); break;
                        case '√∑': calcValue = String(first / second); break;
                    }
                    calcOp = null;
                    calcFirst = null;
                }
            } else if ('+-√ó√∑'.includes(key)) {
                calcFirst = calcValue;
                calcOp = key;
            } else if (key === '¬±') {
                calcValue = String(parseFloat(calcValue) * -1);
            } else if (key === '%') {
                calcValue = String(parseFloat(calcValue) / 100);
            } else {
                if (calcValue === '0' || calcValue === calcFirst) calcValue = '';
                if (calcValue.length < 9) calcValue += key;
            }
            document.getElementById('calcDisplay').textContent = calcValue.substring(0,9);
        }

        // Camera
        function takePhoto() {
            const flash = document.getElementById('flash');
            flash.style.opacity = '1';
            setTimeout(() => flash.style.opacity = '0', 100);
            showToast('Photo captured');
        }

        // Toast
        function showToast(msg) {
            const toast = document.getElementById('toast');
            toast.textContent = msg;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 2000);
        }

        // Prevent zoom
        document.addEventListener('gesturestart', e => e.preventDefault());
        document.addEventListener('dblclick', e => e.preventDefault());
    </script>
</body>
</html>
